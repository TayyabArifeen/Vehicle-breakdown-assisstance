@model BreakDown_Assistance.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<head>

    <style>
        .header2 {
            overflow: hidden;
            background-color: whitesmoke;
            padding-top: 21px;
            padding: 5px 0px;
            padding-right: 16px;
            width: 1600px;
            border-bottom: groove;
            border-bottom-color: beige;
            margin-left: 300px;
        }

            .header2 a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px 7px;
                text-decoration: none;
                font-size: 20px;
                line-height: 25px;
                border-radius: 1px;
            }

                .header2 a.logo {
                    font-size: 20px;
                    font-weight: normal;
                }

                .header2 a:hover {
                    background-color: dodgerblue;
                    color: white;
                }

                .header2 a.active {
                    background-color: dodgerblue;
                    color: white;
                }

        .header2-right {
            margin-left: 0px;
        }

        .main {
            /* Same as the width of the sidenav */
            background-color: whitesmoke;
        }
    </style>
</head>

<div class="header2">
    <a href="/Login/Profile" class="logo">
        <i class="fa fa-home">
            Home
        </i>
    </a>
</div>
<center><h1>Delete Product</h1></center>
<hr />
<div class="header2">

    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProductTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProductTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryTitle)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
