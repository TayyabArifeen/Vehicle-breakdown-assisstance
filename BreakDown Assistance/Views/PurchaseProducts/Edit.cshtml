@model BreakDown_Assistance.Models.PurchaseProduct

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<head>

    <style>
        .header2 {
            overflow: hidden;
            background-color: whitesmoke;
            padding-top: 21px;
            padding: 5px 0px;
            padding-right: 16px;
            width: 1600px;
            border-bottom: groove;
            border-bottom-color: beige;
            margin-left: 300px;
        }

            .header2 a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px 7px;
                text-decoration: none;
                font-size: 20px;
                line-height: 25px;
                border-radius: 1px;
            }

                .header2 a.logo {
                    font-size: 20px;
                    font-weight: normal;
                }

                .header2 a:hover {
                    background-color: dodgerblue;
                    color: white;
                }

                .header2 a.active {
                    background-color: dodgerblue;
                    color: white;
                }

        .header2-right {
            margin-left: 0px;
        }

        .main {
            /* Same as the width of the sidenav */
            background-color: whitesmoke;
        }
    </style>
</head>

<div class="header2">
    <a href="/Login/Profile" class="logo">
        <i class="fa fa-home">
            Home
        </i>
    </a>
</div>
<center><h1>Edit Register Product</h1></center>
<hr />
<div class="header2">

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="PurchaseProductID" />
                <div class="form-group">
                    <label asp-for="ProductID" class="control-label"></label>
                    <select asp-for="ProductID" class="form-control" asp-items="ViewBag.ProductID"></select>
                    <span asp-validation-for="ProductID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>
</div>

