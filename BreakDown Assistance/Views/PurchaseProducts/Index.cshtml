@model IEnumerable<BreakDown_Assistance.Models.PurchaseProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<head>

    <style>
        .header2 {
            overflow: hidden;
            background-color: whitesmoke;
            padding-top: 21px;
            padding: 5px 0px;
            padding-right: 16px;
            width: 1600px;
            border-bottom: groove;
            border-bottom-color: beige;
            margin-left: 300px;
        }

            .header2 a {
                float: left;
                color: black;
                text-align: center;
                padding: 12px 7px;
                text-decoration: none;
                font-size: 20px;
                line-height: 25px;
                border-radius: 1px;
            }

                .header2 a.logo {
                    font-size: 20px;
                    font-weight: normal;
                }

                .header2 a:hover {
                    background-color: dodgerblue;
                    color: white;
                }

                .header2 a.active {
                    background-color: dodgerblue;
                    color: white;
                }

        .header2-right {
            margin-left: 0px;
        }

        .main {
            /* Same as the width of the sidenav */
            background-color: whitesmoke;
        }
    </style>
</head>

<div class="header2">
    <a href="/Login/Profile" class="logo">
        <i class="fa fa-home">
            Home
        </i>
    </a>
</div>
<center><h1>Register Product Records</h1></center>
<hr />
<div style="overflow-y:scroll;overflow-x:scroll;height:500px">

    <div class="header2">
        <p>
            <a asp-action="Create" style="color:green">Register New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Product
                    </th>
                    <th>
                        Category
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.products.ProductTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.products.Category.CategoryTitle)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.PurchaseProductID">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.PurchaseProductID">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.PurchaseProductID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>